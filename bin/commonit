#!/usr/bin/env bash

# Setting the `base dir` in this central location:
current_dir=$(cd $(dirname $0) && pwd)
base_dir=${current_dir}/../../..

# TODO: add `server_dir` and `client_dir` -- it is used a couple of times

function parse_repo_line() {
    line=$1
    set +e
    echo ${line} | grep ^#
    comment=$?
    echo ${line} | grep ^$
    empty=$?
    set -e
    NAME=''
    # skip lines starting with #
    if [ "${comment}" == "0" ]; then
        continue
    else
        # skip empty lines
        if [ "${empty}" == "0" ]; then
            continue
        else
            NAME=$(echo ${line} | cut -d ' ' -f1)
        fi
    fi
}

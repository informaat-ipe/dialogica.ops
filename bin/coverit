#!/usr/bin/env bash
set -e

source ${current_dir}/commonit

cd ${base_dir}

while read line; do
    parse_repo_line "${line}"
    if [ "${NAME}x" == "x" ]; then
        continue
    fi

    if [ -z "${1}" -o "${NAME}" == "${1}" -o "${1}" == "test" ]; then
    package_dir=${base_dir}/${NAME}
    if [ -d ${package_dir} ]; then
        echo "--"
        echo "--==  COVERIT ${NAME}  ==--"
        echo "--"
        cd ${package_dir}

        if [ -x ./coverit ]; then
           ./coverit $@
        fi
        echo "-- COVERIT done: ${NAME}"
    else
        echo "-- COVERIT WARNING ${package_dir} does not exist, skipping"
    fi
    fi

done < ${base_dir}/ops/etc/modules.txt


